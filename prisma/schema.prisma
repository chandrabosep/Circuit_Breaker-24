// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Freelancer{
  id String @id @default(auto()) @map("_id")  @db.ObjectId
  address String @unique
  name String
  description  String
  jobs String[]
}

model Employer{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  address String @unique
  name String
  companyName String
  description String
  jobs         Job[]  
}

model Job {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  address      String
  title        String
  description  String
  category     String
  tasks        String
  delivery     String
  reviewDate   String
  budget       String
  createdAt    DateTime? @default(now())
  peopleApplied  String[]
  assigned     String?
  employer     Employer @relation(fields: [address], references: [address])
}

model Reviewer{
  id String @id @default(auto()) @map("_id")  @db.ObjectId
  address String @unique
  name String
  description  String
  jobs String[]
}